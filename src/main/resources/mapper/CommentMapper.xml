<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bookstore.mapper.CommentMapper">
    <insert id="insert" parameterType="com.bookstore.entity.Comment">
        INSERT INTO `comment` (`user_id`, `book_id`, `order_id`, `content`, `rating`, `comment_time`)
        VALUES (#{userId}, #{bookId}, #{orderId}, #{content}, #{rating}, NOW())
    </insert>

    <select id="selectById" parameterType="java.lang.Integer" resultType="com.bookstore.entity.Comment">
        SELECT `comment_id` as commentId, `user_id` as userId, `book_id` as bookId, 
               `order_id` as orderId, `content`, `rating`, `comment_time` as commentTime
        FROM `comment`
        WHERE `comment_id` = #{commentId}
    </select>

    <select id="selectByBookId" parameterType="java.lang.Integer" resultType="com.bookstore.entity.Comment">
        SELECT `comment_id` as commentId, `user_id` as userId, `book_id` as bookId, 
               `order_id` as orderId, `content`, `rating`, `comment_time` as commentTime
        FROM `comment`
        WHERE `book_id` = #{bookId}
        ORDER BY `comment_time` DESC
    </select>

    <select id="selectByUserId" parameterType="java.lang.Integer" resultType="com.bookstore.entity.Comment">
        SELECT `comment_id` as commentId, `user_id` as userId, `book_id` as bookId, 
               `order_id` as orderId, `content`, `rating`, `comment_time` as commentTime
        FROM `comment`
        WHERE `user_id` = #{userId}
        ORDER BY `comment_time` DESC
    </select>

    <update id="update" parameterType="com.bookstore.entity.Comment">
        UPDATE `comment`
        SET `content` = #{content},
            `rating` = #{rating}
        WHERE `comment_id` = #{commentId}
    </update>

    <delete id="delete" parameterType="java.lang.Integer">
        DELETE FROM `comment`
        WHERE `comment_id` = #{commentId}
    </delete>
    <!-- 根据订单ID和图书ID查询评论 -->
    <select id="selectByOrderIdAndBookId" resultType="com.bookstore.entity.Comment">
        SELECT `comment_id`, `user_id`, `book_id`, `order_id`, `content`, `rating`, `create_time`
        FROM `comment`
        WHERE `order_id` = #{orderId} AND `book_id` = #{bookId}
    </select>
</mapper>