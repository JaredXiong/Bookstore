<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bookstore.mapper.OrderItemMapper">
    <insert id="insert" parameterType="com.bookstore.entity.OrderItem">
        INSERT INTO `order_item` (`order_id`, `book_id`, `quantity`, `price`)
        VALUES (#{orderId}, #{bookId}, #{quantity}, #{price})
    </insert>
    
    <select id="selectById" resultType="com.bookstore.entity.OrderItem" parameterType="java.lang.Integer">
        SELECT `item_id` as itemId, `order_id` as orderId, `book_id` as bookId, `quantity`, `price`
        FROM `order_item`
        WHERE `item_id` = #{itemId}
    </select>
    
    <select id="selectByOrderId" resultType="com.bookstore.entity.OrderItem" parameterType="java.lang.String">
        SELECT `item_id` as itemId, `order_id` as orderId, `book_id` as bookId, `quantity`, `price`
        FROM `order_item`
        WHERE `order_id` = #{orderId}
    </select>
    
    <delete id="deleteByOrderId" parameterType="java.lang.String">
        DELETE FROM `order_item`
        WHERE `order_id` = #{orderId}
    </delete>
</mapper>